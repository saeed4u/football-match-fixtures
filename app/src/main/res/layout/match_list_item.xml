<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="9dp"
        android:foreground="?attr/selectableItemBackground"
        android:orientation="vertical"
        android:padding="10dp"
        app:contentPadding="10dp">

    <TextView
            android:id="@+id/match_name"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/secondaryTextColor"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/match_status"
            app:layout_constraintRight_toLeftOf="@id/match_status"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Match name" />


    <TextView
            android:id="@+id/match_status"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Comp plan" />


    <TextView
            android:id="@+id/competition_name"
            style="@style/TextAppearance.AppCompat.Title.Inverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/secondaryTextColor"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/match_name"
            tools:text="Match comp" />


    <TextView
            android:id="@+id/season_name"
            style="@style/TextAppearance.AppCompat.Title.Inverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/secondaryTextColor"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/last_updated"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/last_updated"
            app:layout_constraintTop_toBottomOf="@id/competition_name"
            tools:text="Season comp" />


    <TextView
            android:id="@+id/last_updated"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/competition_name"
            tools:text="Last updated" />


</androidx.constraintlayout.widget.ConstraintLayout>